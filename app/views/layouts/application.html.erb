<!DOCTYPE html>
<html>
  <head>
    <title>Hallyu</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>",
          "image_url": "<%= asset_url current_user.image.url %>"
        };
      </script>
    <% end%>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
